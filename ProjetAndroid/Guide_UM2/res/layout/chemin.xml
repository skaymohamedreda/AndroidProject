<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" 
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/bb">
        
                      
                        
                <TextView android:layout_width="wrap_content"
                        android:textSize="18px"
                        android:layout_height="wrap_content" 
                        android:text="Chemin vers : " 
                        android:paddingTop="20dp"
                        android:textColor="#FFFFFF"/>
                                
                        <EditText android:id="@+id/cheminB"
                                android:maxLines="1"
                                android:hint="Recherche par batiment"
                                android:layout_width="250dp"
                                android:layout_height="wrap_content"
                                android:paddingTop="20dp"
                                android:layout_gravity="center_horizontal"
                                android:textColor="#FFFFFF"
                                />
                        
                        <EditText android:id="@+id/cheminS"
                                android:maxLines="1"
                                android:hint="Recherche par salle"
                                android:layout_width="250dp"
                                android:layout_height="wrap_content"
                                android:paddingTop="30dp"
                                android:layout_gravity="center_horizontal"
                                android:textColor="#FFFFFF"
                                />
                        
                        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        						android:orientation="vertical" 
        						android:layout_width="fill_parent"
	        					android:layout_height="fill_parent"	
                                android:paddingTop="30dp">
                                
                        <Button android:id="@+id/searchB"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:onClick="onClick"
                                android:text="Trouver chemin" 
                                android:layout_gravity="center_horizontal"
                                />
                
                        </LinearLayout>
        
 </LinearLayout>